<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6">
    <h1>Listing Players</h1>
  </div>
  <div class="col-sm-6 text-right">
    <%= link_to 'New Player', new_player_path, class: 'btn btn-success' %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Psn</th>
      <th>Steam</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.username %></td>
        <td><%= player.psn_id %></td>
        <td><%= player.steam_id %></td>
        <td><%= link_to 'Show', player, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_player_path(player), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Destroy', player,
                {
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-danger'
                }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
