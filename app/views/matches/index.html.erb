<p id="notice"><%= notice %></p>
<% if @season.present? %>
  <div class="text-right">
    <%= link_to 'New Match', new_season_match_path(@season), class: 'btn btn-success' %>
  </div>
<% end %>

<div class="text-center">
  <h1>Matches</h1>
  <% if @season.present? %>
    <h1><small><%= @season.meta_info %></small></h1>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Home team</th>
      <th>Away team</th>
      <th>Match status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.home_team %></td>
        <td><%= match.away_team %></td>
        <td><%= match.match_status %></td>
        <td><%= link_to 'Show', match, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_match_path(match), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Delete', match,
                  {
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'btn btn-danger'
                  }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
