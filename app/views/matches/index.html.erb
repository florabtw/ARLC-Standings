<p id="notice"><%= notice %></p>

<h1>Listing Matches</h1>

<table class="table">
  <thead>
    <tr>
      <th>Home team</th>
      <th>Away team</th>
      <th>Match status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.home_team %></td>
        <td><%= match.away_team %></td>
        <td><%= match.match_status %></td>
        <td><%= link_to 'Show', match, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_match_path(match), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Delete', match,
                  {
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'btn btn-danger'
                  }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
