<p id="notice"><%= notice %></p>

<div class="text-right">
  <%= link_to 'Edit Season', edit_season_path(@season), class: 'btn btn-default' %>
  <%= link_to 'New Match', new_season_match_path(@season), class: 'btn btn-success' %>
</div>

<h1 class="text-center">
  <%= @season.name %>
  <small>
    <%= @season.division %>
  </small>
</h1>

<h3>Teams</h3>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @season.teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', team, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_team_path(team), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Destroy', team,
                  {
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'btn btn-danger'
                  }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Matches</h3>
<table class="table">
  <thead>
    <tr>
      <th>Home team</th>
      <th>Away team</th>
      <th>Match status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @season.matches.each do |match| %>
      <tr>
        <td><%= match.home_team %></td>
        <td><%= match.away_team %></td>
        <td><%= match.match_status %></td>
        <td><%= link_to 'Show', match, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_match_path(match), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Delete', match,
                  {
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'btn btn-danger'
                  }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
