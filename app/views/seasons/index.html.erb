<p id="notice"><%= notice %></p>

<h1>Listing Seasons</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Division</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.name %></td>
        <td><%= season.division %></td>
        <td><%= link_to 'Show', season, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_season_path(season), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Destroy', season,
                  {
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'btn btn-danger'
                  }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Season', new_season_path, class: 'btn btn-success' %>
