<p id="notice"><%= notice %></p>

<% if @season.present? %>
  <div class="text-right">
    <%= link_to 'New Team', new_season_team_path(@season), class: 'btn btn-success' %>
  </div>
<% end %>

<div class="text-center">
  <h1>Teams</h1>
  <% if @season.present? %>
    <h1><small><%= @season.meta_info %></small></h1>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', team, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_team_path(team), class: 'btn btn-primary' %></td>
        <td>
          <%= link_to 'Delete', team,
                  {
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: 'btn btn-danger'
                  }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
